pipeline {
  agent none
  stages {
    stage('Checkout') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        git branch: 'main', url: 'https://github.com/hanjin0924/Jenkinsfile-docker.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package -DskipTests=true'
      }
    }
    stage('Test') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn test'
      }
    }
    stage('Build Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image build -t hanjin0924/myweb:$BUILD_NUMBER .'
      }
    }
    stage('Tag Docker Image') {
      agent { label 'controller' }
      steps {
        sh 'docker image tag hanjin0924/myweb:$BUILD_NUMBER hanjin0924/myweb:latest'
      }
    }
    stage('Publish Docker Image') {
      agent { label 'controller' }
      steps {
        withDockerRegistry(credentialsId: 'docker-registry-credential', url: 'git@github.com:hanjin0924/Jenkinsfile-docker.git') {
          sh 'docker image push hanjin0924/myweb:$BUILD_NUMBER' // Tagging with build number
          sh 'docker image push hanjin0924/myweb:$BUILD_latest' // Tagging with latest

        }
      }
    }
    stage('Run Docker Container') {
      agent { label 'controller' }
      steps {
        sh 'docker container run --detach --name my-tomcat -p 80:8080 docker hanjin0924/myweb:latest
      }
    }
  }
}

